doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/static/css/app.css")
        title Todo's App!
    body
        .main-container

            .main-form
                .header
                    .main-tittle
                        h1 To do list
                    form#task-form(action="")
                        input(type="text", name="task", placeholder="Introduce una tarea..." id="input1")
                        select(name="task_option")
                            option(hidden selected value="") Tipo...
                            option(value="Ocio") Ocio
                            option(value="Casa") Casa
                            option(value="Trabajo") Trabajo
                            option(value="Personal") Personal
                            option(value="Universidad") Universidad
                        button(type="submit" name="task_submit" id="btn1") Agregar
                ul.task-list
                

    script(src="/static/js/app.js")